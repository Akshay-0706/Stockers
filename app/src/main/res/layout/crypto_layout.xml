<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CV_cryptoItem"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="3dp"
    android:background="@drawable/gradient_listener"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/IV_crypto"
        android:layout_width="129dp"
        android:layout_height="84dp"
        android:foregroundGravity="top"
        android:src="@drawable/nasdaq_f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_exchange_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/questrial"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Stock Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4" />

    <TextView

        android:id="@+id/TV_exchange_worth_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/questrial"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/TV_exchange_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IV_crypto"
        app:layout_constraintVertical_bias="1.0" />

    <TextView

        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/questrial"
        android:gravity="center"
        android:text=" $"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/TV_exchange_worth_number"
        app:layout_constraintEnd_toStartOf="@+id/TV_exchange_worth_number"
        app:layout_constraintTop_toTopOf="@+id/TV_exchange_worth_number" />

    <TextView
        android:id="@+id/TV_worthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/questrial"
        android:text="Worth:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/TV_exchange_worth_number"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/TV_exchange_worth_number" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/nfc"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="@+id/IV_crypto"
        app:layout_constraintTop_toBottomOf="@+id/IV_crypto" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="88dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/TV_exchange_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_icons8_chip_card" />

</androidx.constraintlayout.widget.ConstraintLayout>